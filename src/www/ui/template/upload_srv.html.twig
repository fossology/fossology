{% extends "include/upload.html.twig" %}

{% block description %}
  <p>
    {{ 'This option permits uploading a files from the server.'| trans }}
  </p>
{% endblock %}

{% block fileselect %}
<li>
  <label for="{{ sourceFilesField }}">
    {{ 'Enter the file path'| trans }}:
  </label>
  <br/>
  <input name="{{ sourceFilesField }}" type="text" size="120"/><br/>
  NOTE: <strong>Contents under a directory will be recursively included.</strong>
  '*' is supported to select multiple files (e.g. *.txt).
</li>
<li>
  <label for="{{ nameField }}">
    ({{ 'Optional'|trans }}) {{ 'Enter a viewable name for this file or directory'| trans }}:
  </label>
  <br/>
  <input name="{{ nameField }}" type="text" size="120"/><br/>
  {{ 'Note: If no name is provided, then the uploaded file (directory) name will be used.' |trans }}
</li>
{% if hostlist|length > 0 %}
<li>
  <label for="host">
    {{ 'Choose a host'| trans }}:
  </label>
  <select name='host' class="ui-render-select2">
    {{ hostlist }}
  </select>
</li>
{% endif %}
{% endblock %}
{% block foot %}
  {{ parent() }}
  <script type="text/javascript"> {% include "upload_srv.js.twig" %} </script>
  {{ injectedFoot }}
{% endblock %}
