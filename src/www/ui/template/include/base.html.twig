<!DOCTYPE html>
<html>
  <head lang="en">
    {% block head %}
      {% include "include/head.html.twig" %}
      <title>{% block title %}{{ title|e }}{% endblock %}</title>
      {{ metadata }}
      {% block styles %}
      {{ styles }}
      {% endblock %}
    {% endblock %}
  </head>
  <body class="text">
    {% block menu %}
      {{ menu }}
    {% endblock %}

    {% block micromenu %}
      {% if micromenu %}
        <div style="border: thin dotted gray; background-color:lightyellow;">
          {{ micromenu }}
        </div>
      {% endif %}
    {% endblock %}

    {% block message %}
      <div id="dmessage" style="border-bottom: 1px dashed gray;">
        <button name="eraseme" value="close" onclick="rmMsg();">{{ 'Close'| trans }}</button>
        {% if message %}  {{ message|raw|nl2br }} {% endif %}
      </div>
      <script type="text/javascript">
        function rmMsg() {
          var div = document.getElementById("dmessage");
          div.style.display = "none";
        }
        {% if message %}{% else %} rmMsg();{% endif %}
    </script>
  {% endblock %}


  {% block content %}
    {{ content }}
  {% endblock %}

  {% block foot %}
    {% include "include/foot.html.twig" %}
  {% endblock %}
</body>
</html>
