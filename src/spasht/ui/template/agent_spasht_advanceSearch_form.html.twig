<form method="post" action="" id="advanceSearchForm">
<table>
  <tr>
    <td>Name:</td>
    <td>
      <input type="text" name="name" value={{ uploadName }} />
    </td>
  </tr>
  <tr>
    <td>namespace:</td>
    <td>
      <input type="text" list="namespace" name="namespace" /></label>
        <datalist id="namespace">
          {% for key in body.body_namespace %}
            <option value={{ key }}>
          {% endfor %}
        </datalist>
    </td>
  </tr>
  <tr>
    <td>revision:</td>
    <td>
      <input type="text" list="revision" name="revision" /></label>
        <datalist id="revision">
          {% for key in body.body_revision %}
            <option value={{ key }}>
          {% endfor %}
        </datalist>
    </td>
  </tr>
  <tr>
    <td>type:</td>
    <td>
    <input type="text" list="type" name="type" /></label>
      <datalist id="type">
        {% for key in body.body_type %}
          <option value={{ key }}>
        {% endfor %}
      </datalist>
    </td>
  </tr>
  <tr>
    <td>provider:</td>
    <td>
    <input type="text" list="provider" name="provider" /></label>
    <datalist id="provider">
      {% for key in body.body_provider %}
        <option value={{ key }}>
      {% endfor %}
    </datalist>
    </td>
  </tr>
  <tr>
    <td>
    <input type="submit" value="submit"/>
    </td>
  </tr>
</table>

</form>
