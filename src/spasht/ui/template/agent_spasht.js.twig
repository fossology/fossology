<script>
$("#advanceSearchForm").ready(function(){
  $("#advanceSearchForm").hide();
  $(".ui-icon-caret-1-n").hide();
})

function advanceSearchFormEnabled(){
  if (document.getElementById("advanceSearchFormStatus").value === "hidden") {
    $(".ui-icon-caret-1-s").hide();
    $(".ui-icon-caret-1-n").show();
    $("#advanceSearchForm").show(300);
    document.getElementById("advanceSearchFormStatus").value = "shown";
  } else {
    $(".ui-icon-caret-1-n").hide();
    $(".ui-icon-caret-1-s").show();
    $("#advanceSearchForm").hide(300);
    document.getElementById("advanceSearchFormStatus").value = "hidden";
  }
}

function StoreIntoDb(key) {

    var namespace = "definitionsRow_namespace"+key;
    var name = "definitionsRow_name"+key;
    var revision = "definitionsRow_revision"+key;
    var type = "definitionsRow_type"+key;
    var provider = "definitionsRow_provider"+key;

    var params = document.getElementById(type).innerHTML +"/"+ document.getElementById(provider).innerHTML +"/"+ document.getElementById(namespace).innerHTML +"/"+ document.getElementById(name).innerHTML +"/"+ document.getElementById(revision).innerHTML;

    document.getElementById("optionSelectedToOpen").value = params;
    document.getElementById("storeForm").submit();
}

$("#detailsTable").ready(function(){
    // Hide showdetails Table
    document.getElementById("showDetailsTableHead").value = "";
    $("#detailsTable").hide();
    $(".detailsRow").hide();
});

function showDetails(key){

    var detailsRow = "detailsRow"+key;
    var definitionsRow = "definitionsRow"+key;

    // Hide all the Table row
    $(".detailsRow").hide();

    // Remove Highlight from all
    $(".definitionsRow").css("background-color", "white");
    $(".definitionsRow").css("color", "black");

    // Show hidden Table row
    document.getElementById("showDetailsTableHead").value = "show";
    $("#detailsTable").show();
    $("#"+detailsRow).show(600);

    // Highlight selected definition
    $("#"+definitionsRow).css("background-color", "crimson");
    $("#"+definitionsRow).css("color", "white");
}

$( function() {

    var spashtTabCookie = 'stickySpashtTab';

      $('#spashtTabs').tabs({
        active: ($.cookie(spashtTabCookie) || 0),
        activate: function(e, ui){
          // Get active tab index and update cookie
          var idString = $(e.currentTarget).attr('id');
          idString = parseInt(idString.slice(-1)) - 1;
          $.cookie(spashtTabCookie, idString);
        }
      });
    });
</script>
